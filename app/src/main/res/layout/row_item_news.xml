<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/RowItemNews.Container">

    <ImageView
        android:id="@+id/row_item_image"
        android:layout_gravity="center_vertical"
        android:layout_width="150dp"
        android:layout_height="100dp"
        style="@style/RowItemNews.Image"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/row_item_type"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RowItemNews.Type"/>
        <TextView
            android:layout_alignParentEnd="true"
            android:id="@+id/row_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RowItemNews.Date"/>
        <TextView
            android:layout_below="@id/row_item_type"
            android:id="@+id/row_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RowItemNews.Title"/>
        <TextView
            android:layout_below="@id/row_item_title"
            android:id="@+id/row_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RowItemNews.Description"/>


    </RelativeLayout>


</LinearLayout>