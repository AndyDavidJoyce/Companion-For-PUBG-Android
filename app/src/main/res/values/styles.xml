<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TabText</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="AppTheme.TabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="RowItem">
        <item name="android:color">@color/white</item>
    </style>
    <style name="RowItem.Name">
        <item name="android:textSize">@dimen/item_name_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RowItem.Category">
        <item name="android:textSize">@dimen/item_category_size</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="RowItem.Type">
        <item name="android:textSize">@dimen/item_type_size</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
