<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTheme.TabText</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="AppTheme.TabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MapText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/map_text_size</item>
    </style>

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">0dp</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">5dp</item>
        <item name="tabPaddingEnd">5dp</item>
        <item name="tabBackground">@color/tabBackground</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/tabText</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="RowItem">
        <item name="android:color">@color/white</item>
    </style>


    <style name="RowItem.Name">
        <item name="android:textSize">@dimen/item_name_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RowItem.Category">
        <item name="android:textSize">@dimen/item_category_size</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="RowItem.Type">
        <item name="android:textSize">@dimen/item_type_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RowItem.Info">
        <item name="android:textSize">@dimen/item_info_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RowItemNews">
        <item name="android:color">@color/white</item>
    </style>
    <style name="RowItemNews.Container">
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:padding">@dimen/news_item_padding_size</item>
        <item name="android:background">@color/tabBackground</item>
    </style>
    <style name="RowItemNews.Image">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/news_item_image_margin</item>
    </style>
    <style name="RowItemNews.Title">
        <item name="android:layout_marginTop">@dimen/news_item_margin_size</item>
        <item name="android:textSize">@dimen/news_item_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RowItemNews.Type">
        <item name="android:textSize">@dimen/news_item_type_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RowItemNews.Date">
        <item name="android:textSize">@dimen/news_item_date_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RowItemNews.Description">
        <item name="android:textSize">@dimen/news_item_description_size</item>
        <item name="android:textStyle">normal</item>
    </style>


</resources>
